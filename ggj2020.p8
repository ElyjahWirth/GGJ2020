function new_scene()
 local s={}
 s.name="scene"
 s.update=function(scene) end
 s.draw=function(scene)
  map(scene.background.x,scene.background.y,0,0,16,16)
  print(scene.name, 0, 10)
 end
 s.unlocked=true
 s.background={
  x=0,
  y=0
 }
 return s
end

